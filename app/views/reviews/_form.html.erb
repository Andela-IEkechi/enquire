<%= form_for Review.new do |f| %>
  <div class="field">
    <%= hidden_field(:review, :hospital_id, value: params["id"])%>
    <%= hidden_field(:review, :user_id, value: current_user.id)%>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
