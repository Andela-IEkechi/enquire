.login_wrapper.center-align
  .form-signin
    %h2.form-signin-heading Log Into Doctopus
    %br/
    = link_to user_omniauth_authorize_path(:facebook) do
      %button.btn-lg.btn-block.button-hollow-a
        Log In With Facebook
    %br/
    .or
      %span Or
    %br/
    .row
      -#.col.s12
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .row
          .input-field.col.s12
            = f.email_field :email, autofocus: true, class: "validate"
            = f.label :email
        .row
          .input-field.col.s12
            = f.password_field :password, autocomplete: "off", class: "validate"
            = f.label :password

        - if devise_mapping.rememberable?
          %p.center-align
            = f.check_box :remember_me
            = f.label :remember_me
        = f.submit "Log in", class: "btn-lg btn-block button-hollow-b"
      = render "devise/shared/links"
