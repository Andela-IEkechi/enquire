.form-signin.center-align
  %h2.form-signin-heading Log Into Cadwings
  %br/
  .row
    = link_to "Log In With Facebook", user_omniauth_authorize_path(:facebook),
    class: 'button-hollow-a facebook session-btn col s12'
  %br/
  .or
    %span Or
  %br/
  .row
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .row
        .input-field.col.s12
          = f.email_field :email, autofocus: true, class: "validate"
          = f.label :email
      .row
        .input-field.col.s12
          = f.password_field :password, autocomplete: "off", class: "validate"
          = f.label :password

      - if devise_mapping.rememberable?
        %p.center-align
          = f.check_box :remember_me
          = f.label :remember_me
      .row.center-align
        = f.submit "Log in", class: "waves-effect waves-light btn-large col s12 session-btn"
    = render "devise/shared/links"