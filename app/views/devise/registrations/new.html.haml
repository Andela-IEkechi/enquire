.login_wrapper.center-align
  .form-signin
    %h2.form-signin-heading Join Doctopus
    %br/
    .row
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .row
          .input-field.col.s12
            = f.text_field :name, autofocus: true, class: "validate"
            = f.label :name
        .row
          .input-field.col.s12
            = f.email_field :email, class: "validate"
            = f.label :email
        .row
          .input-field.col.s12
            - if @validatable
              %em
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "off", class: "validate"
            = f.label :password
        .row
          .input-field.col.s12
            = f.password_field :password_confirmation, autocomplete: "off", class: "validate"
            = f.label :password_confirmation
        .row
          .input-field.col.s12
            = f.file_field :image, class: "button-hollow-b"
        .actions.form-group
          %br/
          = button_tag type: "submit", class: "button-hollow-c" do
            %i.fa.fa-user-plus
              Sign Up
      = render "devise/shared/links"