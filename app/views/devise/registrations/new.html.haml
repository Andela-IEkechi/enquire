.login_wrapper.text-center
  .form-signin
    %h2.form-signin-heading Join Doctopus
    %br/
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      #error_explanation= devise_error_messages!
      .field.form-group
        %br/
        = f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name"
      .field.form-group
        %br/
        = f.email_field :email, class: "form-control", placeholder: "Email"
      .field.form-group
        %br/
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
      .field.form-group
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password"
      .field.form-group
        = f.label :image
        %br/
        = f.file_field :image, class: "button-hollow-b"
      .actions.form-group
        %br/
        = button_tag type: "submit", class: "button-hollow-c" do
          %i.fa.fa-user-plus
            Sign Up
    = render "devise/shared/links"