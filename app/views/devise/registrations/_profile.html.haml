= f.fields_for :f_attributes do |profile|
  .field.form-group
    %br/
    = f.label :date_of_birth
    = f.date_select :date_of_birth, :order => [:day, :month, :year],
    start_year: (Date.today.year - 96), :html=>{:class => "form-control"}
  .field.form-group
    %br/
    = f.label :gender
    = f.select :gender, options_for_select(User::GENDER), {}, class: "form-control", include_blank: true
  .field.form-group
    %br/
    = profile.label :address
    = f.text_area :address, class: "form-control"
  .field.form-group
    %br/
    = f.label :phone_number
    = f.number_field :phone_number, class: "form-control"
  .field.form-group
    %br/
    = f.label :ethnicity
    = f.select :ethnicity, options_for_select(User::TRIBE), {}, include_blank: true, class: "form-control"
  .field.form-group
    %br/
    = f.label :occupation
    = f.text_field :occupation, class: "form-control"
  .field.form-group
    %br/
    = f.label :religion
    = f.select :religion, options_for_select(User::RELIGION), {}, include_blank: true, class: "form-control"
  .field.form-group
    %br/
    = f.label :marital_status
    = f.select :marital_status, options_for_select(User::MARITAL), {}, include_blank: true, class: "form-control"
  .field.form-group
    %br/
    = f.label :weight
    = f.text_field :weight, class: "form-control"
  .field.form-group
    %br/
    = f.label :height
    = f.text_field :height, class: "form-control"
  .field.form-group
    %br/
    = f.label :year_of_grad
    = f.select :year_of_grad, relevant_years, {}, include_blank: true, class: "form-control"
  .field.form-group
    %br/
    = f.label :specialization
    = f.select :specialization, options_for_select(User::SPECIALIZATION), {}, include_blank: true, class: "form-control"