<p id="notice"><%= notice %></p>

<p>
  <strong>Caption:</strong>
  <%= @question.caption %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user %>
</p>

<p>
  <strong>Doctor:</strong>
  <%= @question.doctor %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<h4 class="page-header">Answers</h4>
<%= form_for Answer.new do |f| %>
    <div class="field">
      <%= hidden_field(:answer, :question_id, value: params[:id])%>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>