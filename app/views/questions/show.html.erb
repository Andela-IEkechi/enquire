<p id="notice"><%= notice %></p>

<p>
  <strong>Caption:</strong>
  <%= @question.caption %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>


<h4 class="page-header">Answers</h4>

<% @answers.each do |answer| %>
    <%= answer.content %><br>
    <% if user_signed_in? %>
        <%= form_for AnswerLike.new do |f| %>
            <%= hidden_field(:answer_like, :answer_id, value: "#{answer.id}")%>
            <%= hidden_field(:answer_like, :user_id, value: current_user.id)%>
            <div class="row actions text-center">
              <%= f.submit "Appreciate", class: "btn btn-primary btn-resize" %>
            </div>
            <br>
        <% end %>
    <% end %>
<% end %>

<h4>Are you a Doctor?</h4>
<h3>Answer this Question</h3>

<%= render 'answers/form' %>

