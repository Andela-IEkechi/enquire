<%= form_for Answer.new do |f| %>
    <div class="field">
      <%= hidden_field(:answer, :question_id, value: params["id"])%>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
