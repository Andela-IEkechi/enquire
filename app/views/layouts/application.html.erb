<!DOCTYPE html>
<html>
<head>
  <title>Enquire</title>
  <%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap.min', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar-fixed-top container-fluid">
  <%= link_to 'ENQUIRE', root_path, :class => 'navbar-brand' %>
  <div class="navbar-text pull-right">
    <div class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        CONNECT <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'HOSPITALS', hospitals_path, tabindex: "-1" %></li>
        <li><%= link_to 'QUESTIONS', questions_path, tabindex: "-1" %></li>
        <li><%= link_to 'DOCTORS', doctors_path, tabindex: "-1" %></li>
      </ul>
    </div>
  </div>
  <div class="navbar-text pull-right">
    <% if user_signed_in? %>
        <div class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <strong><%= current_user.name %></strong><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit profile', edit_user_registration_path, tabindex: "-1" %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, tabindex: "-1"  %></li>
          </ul>
        </div>
    <% elsif doctor_signed_in? %>
        <div class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <strong><%= current_doctor.name %></strong><b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Edit profile', edit_doctor_registration_path, tabindex: "-1" %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", destroy_doctor_session_path, method: :delete, tabindex: "-1"  %></li>
          </ul>
        </div>
    <% else %>
        <div class="dropdown">
          <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
            JOIN <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Doctor Sign up", new_doctor_registration_path, tabindex: "-1"  %></li>
            <li><%= link_to "Doctor Login", new_doctor_session_path, tabindex: "-1"  %></li>
            <li class="divider"></li>
            <li><%= link_to "User Sign up", new_user_registration_path, tabindex: "-1"  %></li>
            <li><%= link_to "User Login", new_user_session_path, tabindex: "-1"  %></li>
          </ul>
        </div>
    <% end %>
  </div>
</nav>
<div class="container-fluid">
  <%= yield %>
</div>

</body>
</html>
