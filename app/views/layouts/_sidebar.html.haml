%ul.nav.nav-stacked
  - if user_signed_in?
    %li
      %ul.user-info
        %li
          = image_tag(current_user.image, class: 'user')
        %li
          %strong
            = current_user.name
            %i.dropdown.clickable
              %i#dropdownMenu1.fa.fa-chevron-circle-down.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown"}
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                %li{:role => "presentation"}
                  = link_to "My Dashboard", dashboard_path

  %li
    = link_to :hospitals do
      %i.fa.fa-fw.fa-hospital-o
      Hospitals
  %li
    = link_to :doctors do
      %i.fa.fa-fw.fa-user-md
      Doctors
  %li
    = link_to :questions do
      %i.fa.fa-fw.fa-question-circle
      Questions
  - if user_signed_in?
    %li
      = link_to edit_user_registration_path do
        %i.fa.fa-fw.fa-cogs
        Settings
    %li
      = link_to destroy_user_session_path, method: :delete do
        %i.fa.fa-fw.fa-power-off
        Log Out
  - else
    %li
      = link_to new_user_session_path do
        %i.fa.fa-fw.fa-sign-in
        Sign In