%li.no-padding
  %ul.collapsible.collapsible-accordion
    %li.bold
      %a.collapsible-header.waves-effect.waves-teal Profile
      .collapsible-body
        %ul
          %li= link_to "My Dashboard", dashboard_path
          - if has_hospital?
            %li= link_to "Verify Hospital", new_hospital_verification_request_path
          - if has_hospital? || admin?
            %li= link_to "Doctors List", doctor_lists_path
          - if admin?
            %li= link_to "Hospitals List", hospital_lists_path
          - if unverified_doctor?
            %li= link_to "Get Verified", new_doctor_verification_request_path
    %li.bold
      = link_to "Hospitals", hospitals_path, class: 'waves-effect waves-teal'
    %li.bold
      = link_to "Everyone", profiles_path, class: 'waves-effect waves-teal'
    %li.bold
      = link_to "Questions", questions_path, class: 'waves-effect waves-teal'
    %li
      = link_to "Settings", edit_user_registration_path, class: 'waves-effect waves-teal'
    %li
      = link_to "Log Out", destroy_user_session_path, method: :delete, class: 'waves-effect waves-teal'