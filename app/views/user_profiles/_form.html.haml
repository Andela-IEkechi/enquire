%section.views
  = form_for @user_profile do |f|
    - if @user_profile.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user_profile.errors.count, "error")} prohibited this user_profile from being saved:"
        %ul
          - @user_profile.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :date_of_birth
      = f.date_select :date_of_birth
    .field
      = f.label :gender
      = f.select :gender, options_for_select(Doctor::GENDER), include_blank: true
    .field
      = f.label :address
      = f.text_area :address
    .field
      = f.label :phone_number
      = f.number_field :phone_number
    .field
      = f.label :ethnicity
      = f.select :ethnicity, options_for_select(Doctor::TRIBE), include_blank: true
    .field
      = f.label :occupation
      = f.text_field :occupation
    .field
      = f.label :religion
      = f.select :religion, options_for_select(Doctor::RELIGION), include_blank: true
    .field
      = f.label :marital_status
      = f.select :marital_status, options_for_select(Doctor::MARITAL), include_blank: true
    .field
      = f.label :weight
      = f.text_field :weight
    .field
      = f.label :height
      = f.text_field :height
    .actions
      = f.submit 'Save'
