- if doctor? || hospital_manager? || admin?
  - if @clients.count > 0
    %h2.profile-head Clients
    %ul.everyone
      - @clients.each do |client|
        %li
          = link_to profile_path(client), class: "list-group-item" do
            %blockquote
              = image_tag client.image, class: 'img-circle', width: 100
              %strong= client.name
              %footer
                = client.occupation
                %strong= client.gender
                %p
                  = seen_last(client.current_sign_in_at) if client.current_sign_in_at
- if @doctors.count > 0
  %h2.profile-head Doctors
  %ul.everyone
    - @doctors.each do |doctor|
      %li
        = link_to profile_path(doctor), class: "list-group-item" do
          %blockquote
            = image_tag doctor.image, class: 'img-circle', width: 100
            %strong= doctor.name
            %footer
              %strong= doctor.hospital.name
              %p
                = seen_last(doctor.current_sign_in_at) if doctor.current_sign_in_at

- if hospital_manager? || admin?
  - if @managers.count > 0
