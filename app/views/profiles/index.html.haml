%h4.center-align Everyone
.row
  .col.s12
    %ul.tabs
      %li.tab.col.s4.active
        = link_to(('<i class="mdi-editor-insert-chart"></i> Doctors').html_safe, "#doctors")
      - if doctor? || hospital_manager? || admin?
        %li.tab.col.s4
          = link_to(('<i class="mdi-social-notifications"></i> Clients').html_safe, "#clients")
      - if hospital_manager? || admin?
        %li.tab.col.s4
          = link_to(('<i class="mdi-social-notifications"></i> Managers').html_safe, "#managers")

  #doctors.col.s12
    = render 'doctors'
  - if doctor? || hospital_manager? || admin?
    #clients.col.s12
      = render 'clients'
  - if hospital_manager? || admin?
    #managers.col.s12
      = render 'managers'




