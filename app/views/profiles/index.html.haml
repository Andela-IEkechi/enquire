- if doctor? || hospital_manager? || admin?
  %ul
    %h2 Clients
    - @clients.each do |client|
      %li
        %br/
        = link_to profile_path(client), class: "list-group-item" do
          %p.profile-image= image_tag(client.image)
          %strong= client.name
          %blockquote
            %p.lead= client.bio
            %footer
              %strong= client.gender
              %p= client.last_sign_in_at
      %br/

