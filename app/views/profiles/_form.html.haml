%section.views
  = form_for @profile do |f|
    - if @profile.errors.any?
      #error_explanation
        %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
        %ul
          - @profile.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :date_of_birth
      = f.date_select :date_of_birth
    .field
      = f.label :gender
      = f.select :gender, options_for_select(User::GENDER), include_blank: true
    .field
      = f.label :address
      = f.text_area :address
    .field
      = f.label :phone_number
      = f.number_field :phone_number
    .field
      = f.label :ethnicity
      = f.select :ethnicity, options_for_select(User::TRIBE), include_blank: true
    .field
      = f.label :occupation
      = f.text_field :occupation
    .field
      = f.label :religion
      = f.select :religion, options_for_select(User::RELIGION), include_blank: true
    .field
      = f.label :marital_status
      = f.select :marital_status, options_for_select(User::MARITAL), include_blank: true
    .field
      = f.label :weight
      = f.text_field :weight
    .field
      = f.label :height
      = f.text_field :height
    .field
      = f.label :year_of_grad
      = f.select :year_of_grad, relevant_years, include_blank: true
    .field
      = f.label :specialization
      = f.select :specialization, options_for_select(User::SPECIALIZATION), include_blank: true
    .actions
      = f.submit 'Save'
