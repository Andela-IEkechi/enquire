= form_for(@hospital) do |f|
  - if @hospital.errors.any?
    #error_explanation
      %h2
        = pluralize(@hospital.errors.count, "error")
        prohibited this hospital from being saved:
      %ul
        - @hospital.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_area :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :image
    %br/
    = f.file_field :image
  .field
    = f.label :address
    %br/
    = f.text_area :address
  .field
    = f.label :classification
    %br/
    = f.select :classification, options_for_select(Hospital::HOSPITAL_TYPE)
  .actions
    = f.submit
